#!/bin/bash

CLOSETBOX_BASE=$(dirname $(which $0))/..
PYENV=$HOME/pyenv/

function update_ansible {
    $PYENV/bin/pip install ansible --upgrade
}

function update_closetbox {
    playbook=$PYENV/bin/ansible-playbook
    cd $HOME/closetbox
    git pull
    git checkout
    cd $HOME/closetbox/ansible
    $playbook closetbox.yml
}

function main() {
    cd CLOSETBOX_BASE
    update_ansible
    update_closetbox
}

main;